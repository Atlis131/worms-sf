{% extends 'base_auth.html.twig' %}

{% block title %}
    <title>{{ 'Create new account' }}</title>
{% endblock %}

{% block security_content %}
    <div class="mb-2 text-center">
        <a class="btn btn-primary" href="{{ path('login') }}">
            {{ 'Back to login' }}
        </a>
    </div>
    {{ form_start(form, {
        'attr': {'class': 'form-signin'}
    }) }}
    <div class="mb-2">
        {{ form_row(form.email, {
            attr: {
                placeholder: 'Email',
                class: 'form-control'
            }
        }) }}
    </div>
    <div class="mb-2">
        {{ form_row(form.password, {
            attr: {
                label: '',
                placeholder: 'Password',
                class: 'form-control'
            }
        }) }}
    </div>
    <div class="mb-2">
        {{ form_row(form.name, {
            attr: {
                placeholder: 'Name',
                class: 'form-control'
            }
        }) }}
    </div>
    <div class="mb-2">
        <button class="btn btn-success" type="submit">
            {{ 'Register' }}
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts_bottom %}
    {{ parent() }}
{% endblock %}