{% extends 'base_auth.html.twig' %}

{% block title %}
    <title>{{ 'Log in to system' }}</title>
{% endblock %}

{% block security_content %}
    <div class="mb-2 text-center">
        <a href="{{ path('homepage') }}">{{ 'Back to homepage' }}</a>
    </div>
    {{ form_start(form, {
        'attr': {'class': 'form-signin'}
    }) }}
    <div class="mb-3">
        {{ form_row(form.email, {
            attr: {
                placeholder: 'Email',
                class: 'form-control'
            }
        }) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.password, {
            attr: {
                label: '',
                placeholder: 'Password',
                class: 'form-control'
            }
        }) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.name, {
            attr: {
                placeholder: 'Name',
                class: 'form-control'
            }
        }) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.surname, {
            attr: {
                placeholder: 'Surname',
                class: 'form-control'
            }
        }) }}
    </div>
    <br>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        {{ 'Register' }}
    </button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts_bottom %}
    {{ parent() }}
{% endblock %}