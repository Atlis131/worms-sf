{% extends 'base.html.twig' %}

{% block title %}
    <title>{{ 'Losowanie broni do trybu' }}</title>
{% endblock %}

{% block content %}
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">{{ 'Edycja' }}</h1>

        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12 offset-lg-3">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-body row">
                        {{ form_start(form) }}

                        {{ form_row(form.name) }}
                        {{ form_row(form.type) }}
                        {{ form_row(form.isTool) }}
                        {{ form_row(form.isOpenMapWeapon) }}
                        {{ form_row(form.imageName) }}

                        {{ form_row(form.save) }}

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts_bottom %}
    {{ parent() }}

{% endblock %}