{% extends 'base.html.twig' %}

{% block title %}
    <title>
        {{ 'User log list' }}
    </title>
{% endblock %}

{% block styles %}
    {% include 'partials/_styles_datatable.html.twig' %}
{% endblock %}

{% block content %}
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body row">
                        <table id="userList" class="display responsive nowrap" style="width:100%">
                            <thead>
                            <tr>
                                <th>{{ 'Id' }}</th>
                                <th>{{ 'Username' }}</th>
                                <th>{{ 'Email' }}</th>
                                <th>{{ 'Name' }}</th>
                                <th>{{ 'Roles' }}</th>
                                <th>{{ 'Actions' }}</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_bottom %}
    {{ parent() }}

    {% include 'pages/user/datatable/list.html.twig' with { 'weaponId': '' } %}
{% endblock %}
