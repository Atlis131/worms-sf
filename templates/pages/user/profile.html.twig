{% extends 'base.html.twig' %}

{% block title %}
    <title>{{ 'User Edit' }}</title>
{% endblock %}

{% block content %}
    <div class="container-fluid p-0">
        <div class="mb-3">
            <h1 class="h3 d-inline align-middle">{{ 'Profile' }}</h1>
        </div>
        <div class="row">
            <div class="col-md-4 col-xl-3">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">{{ 'Profile Details' }}</h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="{{ asset('assets/img/avatar.webp') }}" alt="Christina Mason"
                             class="img-fluid rounded-circle mb-2" width="128" height="128"/>
                        <h5 class="card-title mb-0">{{ user.email }}</h5>
                    </div>
                    <hr class="my-0"/>
                    <div class="card-body">
                        <h5 class="h6 card-title">{{ 'About' }}</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-1"><span data-feather="calendar" class="feather-sm me-1"></span>
                                {{ 'Join date' }}
                                <span class="text-primary">
                                    {{ user.registrationDate|date('Y-m-d') }}
                                </span>
                            </li>
                            <li class="mb-1"><span data-feather="user" class="feather-sm me-1"></span>
                                {{ 'Username' }}
                                <span class="text-primary">
                                    {{ user.name }}
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-xl-3">
                <div class="card">
                    {{ form_start(changePasswordForm) }}
                    <div class="card-header">
                        <h5 class="card-title mb-0">{{ 'Change Password' }}</h5>
                    </div>
                    <div class="card-body">
                        {{ form_row(changePasswordForm.plainPassword) }}
                        {{ form_row(changePasswordForm.password) }}
                        <p class="font-weight-bolder">{{ 'Password requirements:' }}</p>
                        <ul class="pl-1 ml-1">
                            <li class="mb-1">{{ 'Minimum 8 characters!' }}</li>
                            <li class="mb-1">{{ 'Your password must contain at least one lowercase letter' }}</li>
                            <li class="mb-1">{{ 'At least one uppercase letter' }}</li>
                            <li class="mb-1">{{ 'At least one digit' }}</li>
                            <li class="mb-1">{{ 'At least one special character' }}</li>
                            <li class="mb-1">{{ 'Remember no spaces!' }}</li>
                        </ul>
                    </div>
                    <div class="mb-2 text-center">
                        {{ form_row(changePasswordForm.save) }}
                    </div>

                    {{ form_end(changePasswordForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_bottom %}
    {{ parent() }}

{% endblock %}
